<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <variables>
      <mainColor>E53F32</mainColor>
   </variables>

   <feature supported="carousel">
      <view name="system">
         <image name="background" extra="true">
            <path>./_inc/images/red/background.png</path>
         </image>
         <image name="background_bottom" extra="true">
            <path>./_inc/images/red/background_bottom.png</path>
         </image>
      </view>
   </feature>

   <view name="basic">
      <image name="background" extra="true">
         <path>./_inc/images/red/background_basic.png</path>
      </image>
   </view>

   <view name="detailed,video">
      <image name="background" extra="true">
         <path>./_inc/images/red/background_video.png</path>
      </image>
   </view>

   <view name="menu">
            <!-- <menuText name="menutext, menutitle">
         <separatorColor>${mainColor}</separatorColor>
      </menuText> -->
      <menuText name="menutext, menutitle">
         <separatorColor>${mainColor}</separatorColor>
         <selectedColor>000000</selectedColor>
         <selectedBackgroundColor>${mainColor}</selectedBackgroundColor>
      </menuText>
   </view>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <selectedColor>${mainColor}</selectedColor>
      </textlist>
   </view>

   <view name="grid">
    <gridtile name="selected">
      <backgroundColor>${mainColor}</backgroundColor>
    </gridtile>
  </view>

</theme>