<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   <sound name="back">
      <path>./_inc/sounds/back.wav</path>
   </sound>

   <sound name="scroll">
      <path>./_inc/sounds/move.wav</path>
   </sound>

   <sound name="select">
      <path>./_inc/sounds/select.wav</path>
   </sound>

   <feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <type>vertical</type>
            <!-- <pos>0.05 0.0</pos> -->
             <pos>0.01 0.0</pos>
            <logoAlignment>left</logoAlignment>
            <size>1.0 0.934</size>
            <logoScale>1.5</logoScale>
            <zIndex>5</zIndex>
            <logoSize>0.3 0.2</logoSize>
            <color>00000000</color>
            <maxLogoCount>3</maxLogoCount>
         </carousel>
         <image name="background" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>2</zIndex>
         </image>
         <image name="background_bottom" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>4</zIndex>
         </image>
         <text name="systemInfo">
            <pos>0.25 0.01</pos>
            <backgroundColor>00000000</backgroundColor>
            <color>FFCE45</color>
            <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
            <fontSize>0.05</fontSize>
            <zIndex>5</zIndex>
         </text>
      </view>
   </feature>

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <textColor>101010</textColor>
         <iconColor>101010</iconColor>
      </helpsystem>
   </view>

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <textColor>101010</textColor>
         <iconColor>101010</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <selectorColor>00000000</selectorColor>
         <selectedColor>ff3a3a</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>FFCE45</secondaryColor>
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./_inc/sounds/move.wav</scrollSound>
         <backSound>./_inc/sounds/back.wav</backSound>
         <selectSound>./_inc/sounds/select.wav</selectSound>
         <zIndex>2</zIndex>
      </textlist>
   </view>

   <view name="detailed,video">
      <textlist name="gamelist">
         <origin>0 0</origin>
         <pos>0.01 0.18</pos>
         <size>0.98 0.75</size>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="basic">
      <textlist name="gamelist">
         <origin>0 0</origin>
         <pos>0 0.156</pos>
         <size>1 0.78</size>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="basic">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>
      </image>
   </view>

   <view name="detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>
      </image>
   </view>

   <view name="detailed">
      <image name="md_image">
         <!-- Bottom center alignment, override helper -->
         <!-- <origin>1 0.5</origin>
         <pos>1 0.55</pos>
         <maxSize>0.56 0.89</maxSize> -->

         <!-- Center right alignment -->
         <!-- <origin>1 0.5</origin>
         <pos>1 0.523</pos>
         <maxSize>0.56 0.82</maxSize> -->

         <!-- Bottom right corner alignment -->
         <origin>1 1</origin>
         <pos>1 0.93</pos>
         <maxSize>0.56 0.82</maxSize>
         <zIndex>3</zIndex>
      </image>
   </view>

   <view name="video">
      <video name="md_video">
         <!-- Bottom right corner alignment -->
         <origin>1 1</origin>
         <pos>1 0.93</pos>
         <maxSize>0.56 0.82</maxSize>

         <zIndex>4</zIndex>
         <delay>1</delay>
         <zIndex>3</zIndex>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
         <effect>none</effect>
      </video>
   </view>

   <view name="detailed,video">
      <text
         name="md_lbl_players, md_players, md_rating, md_releasedate">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <fontSize>0.04</fontSize>
      </text>
      <rating name="md_rating">
         <origin>0 0</origin>
         <pos>0.73 0.11</pos>
         <size>0.27 0.07</size>
         <zIndex>4</zIndex>
         <filledPath>./_inc/images/star_full.png</filledPath>
         <unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
      </rating>
      <text name="md_lbl_players">
         <origin>0 0</origin>
         <pos>0.61 0.04</pos>
         <size>0.13 0.07</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>
      <text name="md_players">
         <origin>0 0</origin>
         <pos>0.73 0.04</pos>
         <size>0.13 0.07</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>
      <datetime name="md_releasedate">
         <origin>0 0</origin>
         <format>â€¢%Y</format>
         <pos>0.83 0.04</pos>
         <size>0.2 0.07</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </datetime>
      <image name="md_marquee">
         <pos>0 1</pos>
         <origin>0.5 0.5</origin>
         <maxSize>0.1 0.1</maxSize>
         <zIndex>1</zIndex>
      </image>

   </view>
   <view name="menu">
      <menuBackground name="menubg">
         <color>2d2d2d</color>
      </menuBackground>
      <menuText name="menutext, menutitle">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <!-- <fontPath>./_inc/fonts/RobotoCondensed-Bold.ttf</fontPath> -->
         <fontSize>.0435</fontSize>
         <!-- <fontSize>.039</fontSize> -->
         <!-- <fontSize>.050</fontSize> -->
         <color>ffffff</color>
      </menuText>
      <menuTextEdit name="menutextedit">
         <inactive>./_inc/images/textinput_inactive.png</inactive>
         <active>./_inc/images/textinput_active.png</active>
      </menuTextEdit>
   </view>

</theme>